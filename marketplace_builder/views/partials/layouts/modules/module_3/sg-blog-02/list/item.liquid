<div class="card sg-card border-0 mb-4">
	<div class="row no-gutters">
		<div class="col-12 col-md-6 col-lg-5 sg-card-img">
			<a href="/{{this['module_slug']}}/{{this['slug']}}">
				<img class="w-100" src="{{this['List Image'] | asset_url}}" alt="{{this.name}}">
			</a>
		</div>
		<div class="col-12 col-md-6 col-lg-7">
			<div class="card-body sg-card-body">
				<h3><a href="/{{this['module_slug']}}/{{this['slug']}}">{{this['name']}}</a></h3>
				<p>{{this['Description']}}</p>
				<p><i class="fas fa-pen-alt me-1 fa-fw"></i>{%- include 'modules/siteglide_authors/get/get_item_author', author_layout: 'sg-blog-02/author', author_layout_type: 'list', author_id: this['Author'] -%}</p>
				<p><i class="fas fa-calendar-day me-2 fa-fw"></i>{{this['release_date'] | date: "%d/%m/%Y"}}</p>
				<p><i class="fas fa-tags me-2 fa-fw"></i>{% for category in this.category_array -%}<a href="/blog?category={{category}}">{{context.exports.categories.items[category].name}}{%- unless forloop.last %}, {% endunless -%}</a>{% endfor %}</p>
			</div>
		</div>
	</div>
</div>